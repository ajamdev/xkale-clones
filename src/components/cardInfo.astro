---
import ArrowRight from "@/assets/iconos/arrow.svg";
import { Cards } from "@/lib/const/card";


---

{
  Cards.map((card)=>(
   <a href="">
     <article class="overflow-hidden rounded-xl relative h-128 group">
      <img src={card.imgSrc} alt={card.imgAlt} class="absolute w-full h-full object-cover inset-0 group-hover:scale-105 transition-transform duration-700"/>
      <div class="flex flex-col justify-end w-full h-full p-6 pb-14 space-y-5 text-blanco backdrop-brightness-50 absolute inset-0">
        <header>
          <h3 class="text-blanco font-bold text-2xl">{card.title}</h3>
        </header>
        <p>{card.description}</p>
        <span>
          Leer m√°s <ArrowRight class={`${card.className} inline-block size-8 ml-1 rounded-full p-1 group-hover:translate-x-1 transition-transform duration-300`} />
        </span>
      </div>
     </article>
   </a>
  ))
}

